---
import projects from "../../data/projects_en";
import ProjectItem from "./ProjectItem.astro";
---

<section>
  <div class="max-w-[1560px] mx-auto px-10 lg:px-16 py-10">
    <h2 id="projects"
        class="text-2xl lg:text-3xl text-center uppercase text-primary mb-12">
      Proyetos
    </h2>
    <p class="mt-12 mb-20 text-center">Crafted with
      skill and care to help our clients grow their business!</p>
    <div class="flex flex-col items-center gap-20">
      {projects.map(item => <ProjectItem {...item} />)}
    </div>
  </div>
</section>