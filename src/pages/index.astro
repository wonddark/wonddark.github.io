<script is:inline>
  window.addEventListener("load", () => {
    const saved = localStorage.getItem("language");
    const preferred = navigator.language;

    if (saved) {
      window.location = `/${saved}`;
    } else if (preferred) {
      const language = new Intl.DisplayNames([], {
        type: "language",
        style: "narrow",
      });
      if (["en", "es", "pt"].includes(language.of(preferred))) {
        window.location = `/${language.of(preferred)}`;
        localStorage.setItem("language", language.of(preferred));
      } else {
        window.location = "/en";
        localStorage.setItem("language", "en");
      }
    } else {
      window.location = "/en";
      localStorage.setItem("language", "en");
    }
  });
</script>